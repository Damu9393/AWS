terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "path/to/your/statefile.tfstate"
    region         = "ap-south-1"
    encrypt        = true
    use_lockfile   = true # Native S3 locking
  }
}

